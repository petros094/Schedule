@model List<ScheduleProject.Models.Entities.Group>
@{
    ViewBag.Title = "AddGroup";
    
}
<html>
<head>
    <title>Schedule</title>
    <style>
        .btn {
            font-size: medium;
            background-color: skyblue;
        }
    </style>
</head>
<body>
    <div>
        <form action="AddGroup" method="post">
            <input type="text" name="GroupName" />
            Add Group:<input type="submit" value="Add" class="btn" />
            <input type="button" class="btn" value="Cancel" onclick="location.href='/Admin/Index'" />
        </form>
        <p>@ViewBag.text</p>
    </div>
    <div>
        @foreach (var item in Model)
        {
            <p> @item.GroupName</p>
            <br />
        }
    </div>
</body>
</html>
